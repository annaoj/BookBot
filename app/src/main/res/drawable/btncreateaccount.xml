<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#c4f05752" />
            <stroke
                android:width="1dp"
                android:color="#84DB84" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#c4f05752"
                android:endColor="#DC9084"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#EDBD00" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
</selector>